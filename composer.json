{
    "name": "slim/slim-skeleton",
    "description": "An API Framework for a faster development",
    "keywords": ["slim", "api", "skeleton", "router", "psr7"],
    "homepage": "https://github.com/ramos3d/api-skeleton",
    "license": "",
    "authors": [
        {
            "name": "Marcelo Soares",
            "email": "marceloxramos3d@gmail.com",
            "homepage": "https://www.ramos3d.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.2",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
